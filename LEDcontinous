//SWITCH
#include<LPC214X.h>
void delay(unsigned int count);
int main(){
while(1)
	{

IODIR0|=(1<<0);//set direction as output
IODIR0|=(1<<1);
IODIR0|=(1<<2);
IODIR0|=(1<<3);
IODIR0|=(1<<4);
IODIR0|=(1<<5);
IODIR0|=(1<<6);

IOSET0|=(1<<1)|(1<<2)|(1<<0)|(1<<3)|(1<<4)|(1<<5);
IOCLR0|=(1<<6);
delay(200000);
		
IOSET0|=(1<<1)|(1<<2);
IOCLR0|=(1<<0)|(1<<3)|(1<<4)|(1<<5)|(1<<6);
delay(200000);
		
IOCLR0|=(1<<2)|(1<<5);
IOSET0|=(1<<0)|(1<<3)|(1<<4)|(1<<6)|(1<<1);
delay(200000);
		
IOCLR0|=(1<<4)|(1<<5);
IOSET0|=(1<<0)|(1<<3)|(1<<1)|(1<<2)|(1<<6);
delay(200000);
		
IOSET0|=(1<<1)|(1<<2)|(1<<5)|(1<<6);
IOCLR0|=(1<<0)|(1<<3)|(1<<4);
delay(200000);

IOCLR0|=(1<<1)|(1<<4);
IOSET0|=(1<<0)|(1<<3)|(1<<2)|(1<<5)|(1<<6);
delay(200000);
		
IOCLR0|=(1<<1);
IOSET0|=(1<<0)|(1<<3)|(1<<4)|(1<<5)|(1<<6)|(1<<2);
delay(200000);

IOSET0|=(1<<0)|(1<<1)|(1<<2);
IOCLR0|=(1<<3)|(1<<4)|(1<<5)|(1<<6);
delay(200000);

IOSET0|=(1<<0)|(1<<3)|(1<<4)|(1<<5)|(1<<6)|(1<<1)|(1<<2);
delay(200000);

IOSET0|=(1<<1)|(1<<3)|(1<<2)|(1<<5)|(1<<6)|(1<<0);
IOCLR0|=(1<<4);
delay(200000);
	}	
}
void delay(unsigned int count){
	unsigned int i;
	for(i=0;i<count;i++);
}